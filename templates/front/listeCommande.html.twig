{% extends 'base.html.twig' %}


{% block title %}

{% endblock %}




{% block body %}


    {% for commande in commandes %}

    <table class="table table-hover table-hover thead-dark text-center">
        <thead class="table-hover thead-dark text-center">
        <tr>
            <th>Nom</th>
            <th>Quantité</th>
            <th>Prix TTC</th>
            <th>Article</th>
        </tr>
        </thead>
        <tbody>
        {% for item in commande.achats %}
            <tr>
                <td>{{ item.article.nom }}</td>
                <td>{{ item.quantite }}</td>
                <td>{{ item.article.prix }}€</td>



                <td><img height="40" width="40" src="{{ asset('upload/') }}{{ item.article.image }}" alt=""></td>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>TOTAL COMMANDE = {{ commande.montantTotal }} € TTC</div>

{% endfor %}

{% endblock %}



