{% extends 'base.html.twig' %}

{% block body %}


    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6">{{ message }}</div>
        </div>

    {% endfor %}




    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6">{{ message }}</div>
        </div>

    {% endfor %}







    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Categorie</th>

            <th>Photo</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nom }}</td>
                <td>{{ article.prix }} â‚¬</td>
                <td>{{ article.categorie.nom }} </td>
                <td><img height="40" width="40" src="{{ asset('upload/') }}{{ article.image }}" alt=""></td>
                <td><a class="btn btn-success" href="{{ path('modifArticle',{'id':article.id}) }}">modifier</a>
                    <a class="btn btn-danger" href="{{ path('deleteArticle',{'id':article.id}) }}">supprimer</a>
                </td>
            </tr>
        {% endfor %}


        </tbody>


    </table>



{% endblock %}

